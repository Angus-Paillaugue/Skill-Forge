{
	"name": "skill-forge",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm generate-sitemap && vite build",
		"preview": "vite preview",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"build-containers": "sudo docker build -t python-runner ./src/lib/server/containers/python",
		"generate-sitemap": "node ./scripts/generate-sitemap.js",
		"depcheck": "npx depcheck --detailed",
		"deploy": "./scripts/deploy.sh",
		"test:unit": "vitest --ui",
		"test:e2e": "playwright test tests/e2e"
	},
	"devDependencies": {
		"@playwright/test": "^1.45.3",
		"@sveltejs/kit": "^2.7.3",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.1",
		"@vitest/ui": "2.1.4",
		"autoprefixer": "^10.4.20",
		"depcheck": "^1.4.7",
		"dotenv": "^16.4.5",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.11.0",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"svelte": "^5.1.4",
		"tailwindcss": "^3.4.14",
		"vite": "^5.4.10",
		"vitest": "^2.0.4"
	},
	"type": "module",
	"dependencies": {
		"@shikijs/transformers": "^1.22.2",
		"@sveltejs/adapter-node": "^5.2.9",
		"bcrypt": "^5.1.1",
		"clsx": "^2.1.1",
		"directory-tree": "^3.5.2",
		"express": "^4.21.1",
		"fuse.js": "^7.0.0",
		"isolated-vm": "^5.0.1",
		"js-confetti": "^0.12.0",
		"jsonwebtoken": "^9.0.2",
		"lucide-svelte": "^0.454.0",
		"mdsvex": "^0.12.3",
		"monaco-editor": "^0.52.0",
		"mysql2": "^3.11.3",
		"paneforge": "^0.0.6",
		"shiki": "^1.22.2",
